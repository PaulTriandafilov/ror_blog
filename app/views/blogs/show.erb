<h1>Blog #<%= @blog.id %> - <%= @blog.name %>  </h1>

<%= link_to 'Create new article', new_blog_article_path(@blog) %>

<% if @blog.articles.empty? %>
    <h1>No articles for this blog</h1>

<% else %>
    <table>
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th>Actions</th>
      </tr>

      <% @blog.articles.each do |article| %>
        <tr>
          <td> <%= link_to article.title, blog_article_path(@blog, article) %> </td>
          <td> <%= article.text %> </td>
          <td> <%= link_to 'Edit', edit_blog_article_path(@blog, article) %> </td>
          <td> <%= link_to 'Remove', blog_article_path(@blog, article),
                           method: :delete,
                           data: {confirm: 'Are you sure?'}%> </td>
        </tr>
      <% end %>

    </table>

<% end %>

<%= link_to 'Back to list of blogs', blogs_path %>