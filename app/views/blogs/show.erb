<h1>Blog #<%= @blog.id %> - <%= @blog.name %>  </h1>

<%= link_to 'Create new article', new_blog_article_path(@blog), class: "container" %>

<% if @blog.articles.empty? %>
    <h1>No articles for this blog</h1>

<% else %>
    <div>
      <table class="table table-hover">
        <tr>
          <th class="col-md-2">#</th>
          <th class="col-md-3">Title</th>
          <th class="col-md-4">Text</th>
          <th class="col-md-3">Actions</th>
        </tr>
        <% @blog.articles.each do |article| %>
            <tr>
              <td> <%= article.id %> </td>
              <td> <%= link_to article.title, blog_article_path(@blog, article) %> </td>
              <td> <%= article.text %> </td>
              <td> <%= link_to 'Edit', edit_blog_article_path(@blog, article) %> <%= link_to 'Remove', blog_article_path(@blog, article),
                                                                                             method: :delete,
                                                                                             data: {confirm: 'Are you sure?'}%> </td>
            </tr>
        <% end %>
      </table>
    </div>

<% end %>

<%= link_to 'Back to the list of blogs', :back %>