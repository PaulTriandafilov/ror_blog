<h1>List of Articles</h1>

<% if @articles.empty? %>
    <h1>No Articles in app</h1>

<% else %>
    <div class="container">
      <table class="table table-hover">
        <tr>
          <th class="col-md-2">#</th>
          <th class="col-md-3">Title</th>
          <th class="col-md-5">Text</th>
          <th class="col-md-2">Blog</th>
        </tr>

        <% @articles.each do |article| %>
            <tr>
              <td> <%= article.id %> </td>
              <td> <%= article.title %> </td>
              <td> <%= article.text %> </td>
              <td> <%= article.blog.name %> </td>
            </tr>
        <% end %>

      </table>
    </div>
<% end %>